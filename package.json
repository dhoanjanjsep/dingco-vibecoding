{
  "name": "cursor-talk-to-figma-mcp",
  "description": "Cursor Talk to Figma MCP - Next.js Web Interface",
  "version": "0.3.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "socket": "bun run src/socket.ts",
    "serve": "npx serve public -p 3000",
    "serve:docs": "npx serve docs -p 3000",
    "setup": "./scripts/setup.sh",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File ./scripts/setup.ps1",
    "setup:windows-simple": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-windows-simple.ps1",
    "setup:windows-npm": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-npm.ps1",
    "install-and-setup": "powershell -ExecutionPolicy Bypass -File ./scripts/install-and-setup.ps1",
    "build:mcp": "tsup",
    "build:watch": "tsup --watch",
    "pub:release": "bun run build:mcp && npm publish"
